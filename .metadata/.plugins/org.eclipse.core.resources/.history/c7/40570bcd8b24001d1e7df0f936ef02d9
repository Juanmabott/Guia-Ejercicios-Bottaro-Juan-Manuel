#include <stdio.h>
#include <stdlib.h>
#define pi 3.14

int main(void) {
	setbuf(stdout,NULL);
	int numeroIngresado;
	int SegundoNumeroIngresado;

	float resultado;

	printf("ingrese primer numero:");
	scanf("%d",&numeroIngresado);

	printf("ingrese segundo numero:");
	scanf("%d",&SegundoNumeroIngresado);

	if((numeroIngresado>-50 && numeroIngresado<100)&& (SegundoNumeroIngresado>-50 && SegundoNumeroIngresado<100) )
	{
		resultado=numeroIngresado + SegundoNumeroIngresado;
		printf("el Resultado es:%.2f",resultado);
	}
	else
	{
		printf("ingrese un numero entre -50 y 100");
	}




	return EXIT_SUCCESS;
}
